<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Post - Word Weave</title>
  <link rel="shortcut icon" href="/images/logo1.png" type="image/x-icon">
  <link rel="stylesheet" href="/styles/edit.css">
  <link rel="stylesheet" href="/styles/chatbot.css">
  <style>
    /* Reset body styles to match screenshot */
    body {
      display: block;
      height: auto;
      margin: 0;
      padding: 0;
      background-color: #000;
      color: #fff;
      font-family: Arial, sans-serif;
    }
    
    /* Header styling to match screenshot exactly */
    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px 20px;
      background-color: #000;
      position: fixed;
      width: 100%;
      top: 0;
      left: 0;
      z-index: 1000;
      box-sizing: border-box;
    }
    
    .logo-section {
      display: flex;
      align-items: center;
    }
    
    .logo-section img {
      width: 40px;
      height: 40px;
      margin-right: 10px;
    }
    
    .logo-text {
      color: #fff;
      font-size: 18px;
      font-weight: bold;
    }
    
    .nav-links {
      display: flex;
      gap: 40px;
    }
    
    .nav-links a {
      color: #fff;
      text-decoration: none;
      font-size: 16px;
    }
    
    .nav-links a:hover {
      color: #ffcc00;
    }
    
    /* Main content container */
    .main-container {
      margin-top: 60px;
      padding: 20px;
      max-width: 800px;
      margin-left: 350px;
    }
    
    /* Post form styling */
    .post-container {
      background-color: rgba(0, 0, 0, 0.5);
      border-radius: 8px;
      padding: 20px;
      box-shadow: 0 0 10px rgba(255, 255, 255, 0.1);
    }
    
    .post-heading {
      color: #ffcc00;
      font-size: 24px;
      margin-bottom: 20px;
      border-bottom: 2px solid #ffcc00;
      padding-bottom: 10px;
    }
    
    /* Form styling */
    .form-group {
      margin-bottom: 15px;
    }
    
    label {
      display: block;
      margin-bottom: 5px;
      color: #ddd;
    }
    
    input[type="text"], 
    textarea,
    select {
      width: 100%;
      padding: 12px;
      background-color: #1a1a1a;
      border: 1px solid #ffcc00;
      border-radius: 4px;
      color: #fff;
      font-size: 16px;
    }
    
    select {
      appearance: none;
      background-image: url("data:image/svg+xml;charset=US-ASCII,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20width%3D%22292.4%22%20height%3D%22292.4%22%3E%3Cpath%20fill%3D%22%23FFD700%22%20d%3D%22M287%2069.4a17.6%2017.6%200%200%200-13-5.4H18.4c-5%200-9.3%201.8-12.9%205.4A17.6%2017.6%200%200%200%200%2082.2c0%205%201.8%209.3%205.4%2012.9l128%20127.9c3.6%203.6%207.8%205.4%2012.8%205.4s9.2-1.8%2012.8-5.4L287%2095c3.5-3.5%205.4-7.8%205.4-12.8%200-5-1.9-9.2-5.5-12.8z%22%2F%3E%3C%2Fsvg%3E");
      background-repeat: no-repeat;
      background-position: right 12px top 50%;
      background-size: 12px auto;
      padding-right: 30px;
    }
    
    textarea {
      min-height: 150px;
      resize: vertical;
    }
    
    .btn {
      padding: 12px 20px;
      border-radius: 4px;
      font-size: 16px;
      font-weight: bold;
      cursor: pointer;
      transition: background-color 0.3s;
      border: none;
    }
    
    .primary-btn {
      background-color: #ffcc00;
      color: #000;
      width: 100%;
    }
    
    .primary-btn:hover {
      background-color: #e6b800;
    }
    
    .secondary-btn {
      background-color: #333;
      color: #fff;
      text-align: center;
      display: block;
      margin-top: 10px;
      text-decoration: none;
    }
    
    .secondary-btn:hover {
      background-color: #444;
    }
    
    /* Custom alert styling */
    .overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.7);
      z-index: 1001;
      display: none;
    }
    
    .custom-alert {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background-color: #111;
      padding: 25px;
      border-radius: 8px;
      z-index: 1002;
      width: 350px;
      max-width: 90%;
      border: 1px solid #333;
      display: none;
    }
    
    .custom-alert h3 {
      color: #ffcc00;
      margin-bottom: 15px;
    }
    
    .alert-buttons {
      display: flex;
      justify-content: flex-end;
      gap: 10px;
      margin-top: 20px;
    }
    
    .confirm-btn, .cancel-btn {
      padding: 8px 16px;
      border-radius: 4px;
      cursor: pointer;
      border: none;
    }
    
    .confirm-btn {
      background-color: #d32f2f;
      color: white;
    }
    
    .cancel-btn {
      background-color: #333;
      color: white;
    }
  </style>
</head>
<body>
  <!-- Header exactly matching screenshot -->
  <header>
    <div class="logo-section">
      <img src="/images/logo1.png" alt="Word Weave Logo">
      <span class="logo-text">Word Weave</span>
    </div>
    <div class="nav-links">
      <a href="/home">Home</a>
      <a href="/profile">Profile</a>
      <a href="#" id="logoutBtn">Logout</a>
    </div>
  </header>

  <!-- Main content -->
  <div class="main-container">
    <div class="post-container">
      <h1 class="post-heading">Edit Post</h1>
      
      <form id="editPostForm">
        <input type="hidden" id="postId" value="<%= post.id %>">
        
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" id="title" name="title" value="<%= post.title %>" required>
        </div>
        
        <div class="form-group">
          <label for="category">Category</label>
          <select id="category" name="category" required>
            <option value="Technology" <%= post.category === 'Technology' ? 'selected' : '' %>>Technology</option>
            <option value="Health" <%= post.category === 'Health' ? 'selected' : '' %>>Health</option>
            <option value="Business" <%= post.category === 'Business' ? 'selected' : '' %>>Business</option>
            <option value="Education" <%= post.category === 'Education' ? 'selected' : '' %>>Education</option>
            <option value="Lifestyle" <%= post.category === 'Lifestyle' ? 'selected' : '' %>>Lifestyle</option>
            <option value="Travel" <%= post.category === 'Travel' ? 'selected' : '' %>>Travel</option>
            <option value="Other" <%= post.category === 'Other' ? 'selected' : '' %>>Other</option>
          </select>
        </div>
        
        <div class="form-group">
          <label for="content">Content</label>
          <textarea id="content" name="content" rows="10" required><%= post.content %></textarea>
        </div>
        
        <div class="form-group">
          <button type="submit" class="btn primary-btn">Update Post</button>
          <a href="/home" class="btn secondary-btn">Cancel</a>
        </div>
      </form>
    </div>
  </div>

  <!-- Logout confirmation dialog -->
  <div class="overlay" id="overlay"></div>
  <div class="custom-alert" id="logoutAlert">
    <h3>Confirm Logout</h3>
    <p>Are you sure you want to logout from Word Weave?</p>
    <div class="alert-buttons">
      <button class="cancel-btn" id="cancelLogout">Cancel</button>
      <button class="confirm-btn" id="confirmLogout">Logout</button>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Handle form submission
      document.getElementById('editPostForm').addEventListener('submit', function(e) {
        e.preventDefault();
        
        const postId = document.getElementById('postId').value;
        const title = document.getElementById('title').value;
        const content = document.getElementById('content').value;
        const category = document.getElementById('category').value;
        
        // Send update request
        fetch(`/api/posts/update/${postId}`, {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ title, content, category })
        })
        .then(response => response.json())
        .then(data => {
          if (data.error) {
            alert(data.error);
          } else {
            alert('Post updated successfully');
            window.location.href = '/home';
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert('An error occurred while updating the post');
        });
      });

      // Logout confirmation functionality
      document.getElementById('logoutBtn').addEventListener('click', function(e) {
        e.preventDefault();
        
        // Show custom alert
        document.getElementById('overlay').style.display = 'block';
        document.getElementById('logoutAlert').style.display = 'block';
      });
      
      // Cancel logout
      document.getElementById('cancelLogout').addEventListener('click', function() {
        document.getElementById('overlay').style.display = 'none';
        document.getElementById('logoutAlert').style.display = 'none';
      });
      
      // Confirm logout
      document.getElementById('confirmLogout').addEventListener('click', function() {
        window.location.href = '/logout';
      });
      
      // Close dialog when clicking overlay
      document.getElementById('overlay').addEventListener('click', function() {
        document.getElementById('overlay').style.display = 'none';
        document.getElementById('logoutAlert').style.display = 'none';
      });
    });
  </script>
  <script src="/scripts/chatbot.js"></script>
</body>
</html>