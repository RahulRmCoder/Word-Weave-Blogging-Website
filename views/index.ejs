<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="images/logo1.png" type="image/x-icon">
    <title>Welcome to Word Weave</title>
    <link rel="stylesheet" href="/styles/landing.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.css"/>
</head>
<body>

    <div class="carousel">
        <div><img src="/images/carousel image1.png" alt="Blogging Image 1"></div>
        <div><img src="/images/carousel image 2.png" alt="Blogging Image 2"></div>
        <div><img src="/images/carousel image 3.png" alt="Blogging Image 3"></div>
    </div>

    <div class="overlay">
        <a href="/login" class="btn">Start Blogging</a>
    </div>

    <script>
        $(document).ready(function(){
            // Initialize slick carousel
            $('.carousel').slick({
                autoplay: true,
                autoplaySpeed: 2000,
                dots: true,
                arrows: false,
                fade: true
            });

            // Add click event to advance carousel
            $('.carousel').on('click', function(e) {
                // Check if the click was on the button or its container
                if (!$(e.target).closest('.btn').length && !$(e.target).closest('.overlay').length) {
                    $('.carousel').slick('slickNext');
                }
            });
        });
    </script>

</body>
</html>